    <form method="POST" action="/symbols">
        <input type="text" name="name" value="<%= stocks.ticker %>">
        <button class="btn btn-primary" type="submit"  >Add to List</button>
      </form>
      <form action="POST" action="/symbols">
        <input hidden type="text" name="name" value="<%= stocks.ticker %>">
          <button type="submit">Update üìàüíπ</button>
      </form>

     <% //Should have a check box to potentially hide all stocks where last close is higher%>

    <hr>
    <div class="table">
    <div class="tableHeader">
        <thead>
            
            <th><p>Stock</p></th>
            <th><p>Rolling Avg</p></th>
            <th><p>Last Close</p></th>
            <th><p>Date Run</p></th>
            <th><p>Remove from table:</p></th>
        </thead>
    </div>
    <% let i = 0 %>
    <% stocks.forEach(function(stock) { %>
        
        <div class="row">
            <%if(stock.rollingAvg>stock.lastClose){%>
                <%i++%>
                <tr>

                    <td><p style="color:darkgreen"><u><%= (stock.ticker) %></u></p></td>
                    <td><p style="color:darkgreen"><u><%= (stock.rollingAvg) %></u></p></td>
                    <td><p style="color:darkgreen"><u><%= (stock.lastClose) %></u></p></td> 
                    <td><p style="color:darkgreen"><u><%= (stock.date.toLocaleString()) %></u></p></td>
                    <td><form action="/symbols/<%=stock.ticker%>?_method=DELETE" method="POST">
                        <button type="submit" name="ticker" value="<%=stock.ticker%>">‚ùå</button>
                    </form></p></td>
                </tr>
            
            
                <%}%>
            
        </div>

        <%})%>

    </div>
    <p>List count: <%=i%></p>



